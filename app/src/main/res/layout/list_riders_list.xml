<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_search_ride"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#fff"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_vahicle"
                android:text="Vehicle"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:textColor="#48A848"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tv_seats"
                android:text="Seats"
                android:layout_marginTop="@dimen/_15sdp"
                android:textColor="#48A848"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_price"
                android:text="Price"
                android:layout_marginLeft="6dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_13sdp"
                android:textColor="#48A848"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tv_aavailable"
                android:text="Available"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_13sdp"
                android:textColor="#48A848"
                android:layout_below="@+id/tv_vahicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <Button
                android:id="@+id/btn_book"
                android:text="Book"
                android:layout_below="@+id/tv_aavailable"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_15sdp"
                android:textAllCaps="false"
                android:background="@drawable/button1_rounded"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="40dp" />




        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>